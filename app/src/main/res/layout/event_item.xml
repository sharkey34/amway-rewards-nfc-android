<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/event_image"
        android:layout_width="match_parent"
        android:layout_height="313dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/barcode" />

    <View
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignBottom="@+id/event_image"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:background="@android:color/background_light" />

    <TextView
        android:id="@+id/event_text"
        android:layout_width="266dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/text_container"
        android:layout_alignEnd="@+id/text_container"
        android:layout_alignBottom="@+id/text_container"
        android:layout_marginStart="4dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:gravity="center_vertical"
        android:text="@string/event_name"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <TextView
        android:id="@+id/date_time"
        android:layout_width="140dp"
        android:layout_height="72dp"
        android:layout_alignStart="@+id/text_container"
        android:layout_alignTop="@+id/text_container"
        android:layout_alignBottom="@+id/text_container"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="0dp"
        android:layout_toStartOf="@+id/event_text"
        android:gravity="center"
        android:text="@string/date_time"
        android:textAppearance="@style/TextAppearance.AppCompat" />
</RelativeLayout>
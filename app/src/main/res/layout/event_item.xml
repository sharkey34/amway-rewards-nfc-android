<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="298dp"
        android:layout_alignStart="@+id/event_image"
        android:layout_alignTop="@+id/event_image"
        android:layout_alignEnd="@+id/event_image"
        android:layout_alignBottom="@+id/event_text"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:elevation="10dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp" />

    <ImageView
        android:id="@+id/event_image"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:elevation="10dp"
        android:scaleType="fitCenter"
        android:contentDescription="@string/content_desc"
        app:srcCompat="@drawable/barcode" />

    <View
        android:id="@+id/text_container"
        android:layout_width="wrap_content"
        android:layout_height="101dp"
        android:layout_alignStart="@+id/event_image"
        android:layout_alignEnd="@+id/event_image"
        android:layout_alignBottom="@+id/event_image"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-31dp"
        android:background="@android:color/background_light"
        android:elevation="10dp" />

    <TextView
        android:id="@+id/event_text"
        android:layout_width="266dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/text_container"
        android:layout_alignEnd="@+id/text_container"
        android:layout_alignBottom="@+id/text_container"
        android:layout_marginStart="4dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/amway_blue"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="10dp"
        android:elevation="10dp"
        android:gravity="center_vertical"
        android:text="@string/event_name"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <TextView
        android:id="@+id/date_time"
        android:layout_width="140dp"
        android:layout_height="72dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_alignStart="@+id/text_container"
        android:layout_alignTop="@+id/text_container"
        android:layout_alignBottom="@+id/text_container"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="10dp"
        android:layout_toStartOf="@+id/event_text"
        android:elevation="10dp"
        android:gravity="center"
        android:text="@string/date_time"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <ImageView
        android:id="@+id/share_btn"
        android:layout_width="38dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/event_text"
        android:layout_alignBottom="@+id/event_text"
        android:layout_marginEnd="12dp"
        android:contentDescription="@string/content_desc"
        android:layout_marginBottom="9dp"
        android:elevation="10dp"
        app:srcCompat="@drawable/ic_share_24dp" />

</RelativeLayout>